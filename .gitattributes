# Enforce LF (Unix-style) line endings for all text files
* text=auto eol=lf

# Explicitly set line endings for specific file types
*.sh     text eol=lf
*.js     text eol=lf
*.ts     text eol=lf
*.css    text eol=lf
*.html   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.xml    text eol=lf
*.py     text eol=lf
*.cs     text eol=lf
*.cpp    text eol=lf
*.h      text eol=lf

# .NET specific files
*.csproj text eol=lf
*.sln    text eol=lf
*.props  text eol=lf
*.targets text eol=lf
*.config text eol=lf

# PowerShell scripts (can use CRLF on Windows)
*.ps1    text
*.psm1   text

# Configuration files
.editorconfig text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Treat binary files correctly
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.zip    binary
*.tar.gz binary
*.nupkg  binary
*.dll    binary
*.exe    binary
